# pylint: disable=invalid-name,missing-module-docstring

import contextlib
import time


def func_hi() -> None:
    "Top-of-stack function"
    func_mid()


def func_mid() -> None:
    "Middle-of-stack function"
    func_lo()


def func_lo() -> None:
    "Leaf function"
    time.sleep(0.01)
    raise RuntimeError


# Main loop
for _i in range(10):
    with contextlib.suppress(RuntimeError):
        func_hi()
