# pylint: disable=invalid-name,missing-module-docstring

import threading
import time


def func_hi() -> None:
    "Top-of-stack function"
    for _i in range(10):
        func_mid()


def func_mid() -> None:
    "Middle-of-stack function"
    func_lo()


def func_lo() -> None:
    "Leaf function"
    time.sleep(0.01)


# Main loop(s)
ts = [threading.Thread(target=func_hi) for i in range(2)]
for t in ts:
    t.start()
for t in ts:
    t.join()
